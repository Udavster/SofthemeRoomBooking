@model SofthemeRoomBooking.Models.UserViewModels.LayoutUserViewModel

@{ var authorized = Model == null;}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Softheme Room Booking</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="wrapper">
    <div class="header">
        <div class="logo">
            <img src="~/Content/Images/logo.png">
        </div>
        <ul class="menu">
            @if (authorized)
            {
                <li class="menu__item">
                    <button class="menu__button">
                        <div class="background-plus"></div>
                        <i class="fa fa-plus-square plus" aria-hidden="true"></i>
                    </button>
                </li>
            }
            <li class="menu__item">@Html.ActionLink("Расписание", "Index", "Home", null, new {@class = "menu__link"})</li>

            @if (authorized)
            {
                <li class="menu__item">@Html.ActionLink("Пользователи", "Index", "Feedback", null, new {@class = "menu__link"})</li>
            }
            <li class="menu__item">@Html.ActionLink("Обратная связь", "Index", "Feedback", null, new {@class = "menu__link"})</li>

            @if (authorized)
            {
                <li class="menu__item">
                    <a href="@Url.Action("Index", "Profile")" class="menu__link">
                        <i class="fa fa-user user-icon" aria-hidden="true"></i>
                        <span>@Model.UserName</span>
                    </a>
                </li>
            }
            else
            {
                <li class="menu__item">@Html.ActionLink("Вход", "LogIn", "Account", null, new {@class = "menu__link"})</li>
            }
        </ul>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <div class="footer">
        <ul class="footer__list">
            <li class="footer__item">
                <img src="~/Content/Images/logo-gray.png">
            </li>
            <li class="footer__item">
                <hr color="#C6CDDB" size="1px"/>
            </li>
            <li class="footer__item">
                <p class="footer__copyright">
                    Все права защищены &copy; 2016
                </p>
            </li>
        </ul>
    </div>
</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/common")
@RenderSection("scripts", required: false)
</body>
</html>