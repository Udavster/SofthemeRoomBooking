@model SofthemeRoomBooking.Models.RoomEquipmentViewModel

@using (Html.BeginForm("UpdateRoomEquipment", "Room", FormMethod.Post, new { @class = "compl-background__form form", enctype = "multipart/form-data" }))
{
    <div class="equipmentadmin_top">
        <p class="equipment-elem">Название:</p>
        @Html.EditorFor(model => model.Name, new
        {
            htmlAttributes = new
            {
                @class = "equipment-elem equipmentadmin-general equipmentadmin-inputname"
            }
        })
        <div class="equipment-elem equipmentadmin-cancel">Отменить</div>
        <input id="saveButton" class="equipment-elem equipmentadmin-submit" type="submit" value="Сохранить" />

    </div>
    <div class="equipmentadmin_down">
        <a class="equipmentuser__table" style="margin-right: 0"></a>
        @Html.EditorFor(model => model.Equipment[0].Quantity, new
        {
            htmlAttributes = new
            {
                type = "text",
                @class = "equipmentadmin-general equipmentadmin-input"
            }
        })
        <a class="equipmentuser__board"></a>
        @Html.EditorFor(model => model.Equipment[1].Quantity, new
        {
            htmlAttributes = new
            {
                type = "text",
                @class = "equipmentadmin-general equipmentadmin-input"
            }
        })
       
        <a class="equipmentuser__laptop"></a>
        @Html.EditorFor(model => model.Equipment[2].Quantity, new
        {
            htmlAttributes = new
            {
                type = "text",
                @class = "equipmentadmin-general equipmentadmin-input"
            }
        })
        <a class="equipmentuser__print"></a>
        @Html.EditorFor(model => model.Equipment[3].Quantity, new
        {
            htmlAttributes = new
            {
                type= "text",
                @class = "equipmentadmin-general equipmentadmin-input"
            }
        })
        <a class="equipmentuser__proect"></a>
        @Html.EditorFor(model => model.Equipment[4].Quantity, new
        {
            htmlAttributes = new
            {
                type = "text",
                @class = "equipmentadmin-general equipmentadmin-input"
            }
        })
    </div>
    <div id="event-errors" class="equipment-error hidden-error">
        <i aria-hidden="true" class="error-box__signal fa-exclamation-circle fa"></i>
        <span class="error-text"></span>
    </div>
    @Html.HiddenFor(model => model.Id)
}

@Scripts.Render("~/bundles/equipmentAdmin")